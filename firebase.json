{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "site": "herk-admin",
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "key": "X-FRAME-OPTIONS",
        "value": "DENY"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
